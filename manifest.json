{
    "manifest_version": 3,
    "name": "deXer",
    "version": "0.8.0",
    "author": "r0uge",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2.png"
    },

    "browser_specific_settings": {
        "gecko": {
            "icons": {
                "48": "icons/icon.svg",
                "96": "icons/icon.svg"
            },
            "id": "deXer@r0uge.org"
        }
    },

    "web_accessible_resources": [
        {
            "resources": ["/scripts/*", "/assets/*"],
            "matches": ["*://twitter.com/*", "*://x.com/*"]
        }
    ],

    "content_scripts":[
        {
            "matches": ["*://twitter.com/*", "*://x.com/*"],
            "js": ["scripts/loader.js"],
            "run_at": "document_start"
        }
    ],

    "action":{
        "default_popup": "popup/index.html"
    },
    
    "permissions": ["storage"]
}